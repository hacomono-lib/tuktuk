{
  "name": "@tuktuk/plugin-figma",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "prepare": "yarn build:css",
    "build": "yarn build:css && yarn build:js",
    "build:css": "tailwindcss --input ./src/input.css --output ./src/output.css",
    "build:js": "build-figma-plugin --typecheck --minify",
    "dev": "yarn build:css && concurrently npm:watch:css npm:watch:js",
    "dev:css": "tailwindcss --input ./src/input.css --output ./src/output.css --watch",
    "dev:js": "build-figma-plugin --typecheck --watch"
  },
  "dependencies": {
    "@create-figma-plugin/ui": "^3.1.0",
    "@create-figma-plugin/utilities": "^3.1.0",
    "preact": "^10.19.3"
  },
  "devDependencies": {
    "@create-figma-plugin/build": "^3.1.0",
    "@create-figma-plugin/tsconfig": "^3.1.0",
    "@figma/plugin-typings": "^1.85.0",
    "concurrently": "^8.2.2",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
  },
  "figma-plugin": {
    "editorType": [
      "figma"
    ],
    "id": "tuktuk",
    "name": "tuktuk",
    "main": "src/main.ts",
    "ui": "src/ui.tsx"
  }
}
