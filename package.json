{
  "name": "tuktuk",
  "description": "A flexible framework for fetching design data and outputting it in various design token formats.",
  "private": true,
  "repository": {
    "url": "https://github.com/hacomono-lib/tuktuk",
    "type": "git"
  },
  "author": "mew-ton <mxl_usmarc@slmail.mewton.jp>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "turbo run dev",
    "doc": "astro dev --root ./docs --open",
    "build": "turbo run build",
    "test": "",
    "format": "biome format --write ./packages/*/src ./docs",
    "lint": "biome check --apply ./packages/*/src ./docs"
  },
  "devDependencies": {
    "@astrojs/check": "^0.4.1",
    "@astrojs/starlight": "^0.15.3",
    "@biomejs/biome": "^1.5.1",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "astro": "^4.1.2",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3"
  },
  "workspaces": [
    "packages/*",
    "plugins/*",
    "examples/*"
  ],
  "packageManager": "yarn@4.0.2",
  "volta": {
    "node": "20.11.0",
    "yarn": "4.0.2"
  }
}
